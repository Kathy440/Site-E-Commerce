<div class="card mb-4" style="margin-right: 15px;">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('article.show', { id: article.id }) }}">{{ article.title |slice(0, 12 )}}</a>
        </h5>
        <div style="">
            <img src="{{ article.imageArticle }}" alt="Image de l'article" style="width: 100px;">
        </div>
        <p class="card-text">{{ article.description |slice(0, 6 ) }}...</p>
        <div class="text-primary" style="font-weight: bold">{{ article.FormattedPrix }} €</div>

        <a href="{{ path('article.show', { id: article.id }) }}">
            <button class="btn btn-secondary">Voir le détail</button>
        </a>

        <a href="{{ path('cart_add', {'id': article.id}) }}"
           class="btn btn-success float-right">
            <i class="fas fa-shopping-cart mr-1"></i>
            Ajouter
        </a>
    </div>
</div>


